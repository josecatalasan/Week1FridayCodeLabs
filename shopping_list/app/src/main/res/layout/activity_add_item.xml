<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddItemActivity">

    <Button
        android:id="@+id/banana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/banana"
        android:onClick="addAndReturn"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bread"
        android:onClick="addAndReturn"
        app:layout_constraintTop_toBottomOf="@id/banana"/>

    <Button
        android:id="@+id/milk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/milk"
        android:onClick="addAndReturn"
        app:layout_constraintTop_toBottomOf="@id/bread"/>

    <Button
        android:id="@+id/eggs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eggs"
        android:onClick="addAndReturn"
        app:layout_constraintTop_toBottomOf="@id/milk"/>

    <Button
        android:id="@+id/cheese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cheese"
        android:onClick="addAndReturn"
        app:layout_constraintTop_toBottomOf="@id/eggs"/>

</androidx.constraintlayout.widget.ConstraintLayout>